<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import com.rdchandrahas.shared.component.FileListView?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="0" alignment="TOP_CENTER" styleClass="root">

    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="tool-header">
        <Button text="â† Back" onAction="#handleBack" styleClass="back-button"/>
        <Label fx:id="toolTitleLabel" text="Tool Name" styleClass="tool-header-title" />
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <VBox spacing="20" VBox.vgrow="ALWAYS" styleClass="tool-content-area">
        <padding><Insets top="25" right="30" bottom="25" left="30"/></padding>

        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="tool-bar">
            <Button fx:id="addFilesBtn" text="+ Add Files" onAction="#handleAddFiles" styleClass="primary-button"/>
            <Separator orientation="VERTICAL" prefHeight="30" />
            
            <HBox fx:id="customToolbarArea" spacing="10" alignment="CENTER_LEFT" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <ComboBox fx:id="sortCombo" onAction="#onSortAction" prefWidth="130" promptText="Sort Files..." />
            
            <HBox styleClass="segmented-button-bar">
                <ToggleButton fx:id="listViewBtn" text="List" onAction="#onListToggle" styleClass="left-pill"/>
                <ToggleButton fx:id="gridViewBtn" text="Grid" onAction="#onGridToggle" styleClass="right-pill"/>
            </HBox>
            
            <Separator orientation="VERTICAL" prefHeight="30" />
            <Button text="ðŸ—‘ Clear All" onAction="#handleRemove" styleClass="danger-button"/>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" styleClass="file-list-container">
            <FileListView fx:id="fileListView" VBox.vgrow="ALWAYS" styleClass="file-list-area"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="bottom-action-bar">
            <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25" prefWidth="25"/>
            <Button fx:id="actionBtn" text="Run Action" onAction="#handleAction" styleClass="action-button"/>
        </HBox>
    </VBox>
</VBox>